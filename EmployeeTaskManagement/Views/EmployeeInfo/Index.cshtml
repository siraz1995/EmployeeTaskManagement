@model IEnumerable<EmployeeTaskManagement.Models.EmployeeInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int row = 1;
}
<style>
    .custom-icon {
        color: green;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<link href="~/css/datatable.min.css" rel="stylesheet" />
<div class="IndexDiv">
    <div class="container bg-light">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="text-center  bg-primary text-white">
                    <h1 class="display-12 mt-4 mb-4 p-2">List of Employee</h1>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus-circle"></i> Add</a>
                </div>
                <table class="table display table-striped table-borderless custrom-table mb-2">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                               Employee Name 
                                @*@Html.DisplayNameFor(model => model.EmployeeName)*@
                            </th>
                            <th>
                                Employee Code
                                @*@Html.DisplayNameFor(model => model.EmployeeCode)*@
                            </th>
                            <th>
                                Department Name
                                @*@Html.DisplayNameFor(model => model.JoiningDate)*@
                            </th>
                            <th>
                                Designation Name
                               @* @Html.DisplayNameFor(model => model.Department.Name)*@
                            </th>
                            <th>
                                Joining Date
                               @* @Html.DisplayNameFor(model => model.Designation.Name)*@
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(row++)</td>
                                <td>
                                    @item.EmployeeName
                                    @*@Html.DisplayFor(modelItem => item.EmployeeName)*@
                                </td>
                                <td>
                                    @item.EmployeeCode
                                    @*@Html.DisplayFor(modelItem => item.EmployeeCode)*@
                                </td>
                                <td>
                                    @item.Department.Name
                                   @* @Html.DisplayFor(modelItem => item.JoiningDate)*@
                                </td>
                                <td>
                                    @item.Designation.Name
                                    @*@Html.DisplayFor(modelItem => item.Department.Name)*@
                                </td>
                                <td>
                                    @item.JoiningDate
                                    @*@Html.DisplayFor(modelItem => item.Designation.Name)*@
                                </td>
                                <td class="d-flex justify-content-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details<i class="fas fa-info-circle"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete<i class="fas fa-trash-alt"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{


    <script src="~/js/jquery.dataTables.min.js"></script>
}
