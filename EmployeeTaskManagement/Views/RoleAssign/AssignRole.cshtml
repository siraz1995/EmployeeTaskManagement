@model EmployeeTaskManagement.Models.UserWiseRole

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string menuTextColor = "text-white";
}
<div class="IndexDiv">
    <div class="row justify-content-center mt-4 mb-2">
        <div class="col-md-5">
            <form asp-action="AssignRole" class="form-signin create-form bg-white rounded border shadow-sm p-4">

                <div class="text-center  bg-primary @menuTextColor">
                    <h4 class=" mt-4 mb-4 p-2">Assign Role</h4>
                </div>
                @* <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold">Department</h1>
                </div>*@

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label class="control-label">Role Name</label><br />
                    @Html.DropDownList("RoleId", new SelectList(ViewBag.RoleList, "Id","Name"), "Select Role", new { @class = "form-control", @required = "required" })
                    <span class="dropdown-arrow"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Employee Name</label><br />
                    @Html.DropDownList("EmployeeId", new SelectList(ViewBag.EmployeeList, "Id","EmployeeName"), "Select Employee",new{htmlAttributes= new {@class = "reg form-control input-sm",@type = "number",
                    placeholder = "Regular Time..", @required = "required" }})
                   
                </div>
                <div class="form-group mt-4 text-center">
                    <a class="btn btn-success" asp-action="Index">List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


